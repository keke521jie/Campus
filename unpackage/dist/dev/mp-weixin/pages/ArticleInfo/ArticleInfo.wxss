/* 水平间距 */
.article_info {
  width: 100%;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}
.article_info .article_title {
  font-size: 40rpx;
  font-weight: 700;
  margin: 0 0 30rpx;
}
.article_info .author_info {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}
.article_info .author_info .author_img {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}
.article_info .author_info .author_name {
  font-size: 35rpx;
  margin-right: 20rpx;
}
.article_info .author_info .date {
  color: #999;
}
.article_info .article_content {
  font-size: 30rpx;
  margin-bottom: 20rpx;
}
.article_info .img_list_a {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
}
.article_info .img_list_a .img_item {
  width: 355rpx;
  height: 355rpx;
  overflow: hidden;
  display: flex;
}
.article_info .img_list_a .img_item .img {
  width: 100%;
  height: 0;
  padding-bottom: 100%;
  overflow: hidden;
  background-position: center center;
  background-repeat: no-repeat;
  background-size: cover;
}
.article_info .img_list_b {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
.article_info .img_list_b .img_item {
  width: 236.6rpx;
  height: 236.6rpx;
  overflow: hidden;
  display: flex;
}
.article_info .img_list_b .img_item .img {
  width: 100%;
  height: 0;
  padding-bottom: 100%;
  overflow: hidden;
  background-position: center center;
  background-repeat: no-repeat;
  background-size: cover;
}

