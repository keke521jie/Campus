/* 水平间距 */
.shop .goodslist {
  width: 100%;
  padding: 0 20rpx;
  display: flex;
  flex-wrap: wrap;
}
.shop .goodslist .goodsitem {
  display: flex;
  flex-direction: column;
  width: 345rpx;
  border-radius: 20rpx;
  overflow: hidden;
  background-color: #c3dcfa;
  color: #fff;
}
.shop .goodslist .goodsitem:nth-child(odd) {
  margin-right: 20rpx;
}
.shop .goodslist .goodsitem .img {
  width: 100%;
  height: 345rpx;
  overflow: hidden;
}
.shop .goodslist .goodsitem .goodsinfo {
  display: flex;
  flex-direction: column;
  padding: 10rpx 20rpx;
}
.shop .goodslist .goodsitem .goodsinfo .goods_name {
  font-size: 35rpx;
}
.shop .goodslist .goodsitem .goodsinfo .goods_describe {
  font-size: 25rpx;
  margin-bottom: 5rpx;
}
.shop .goodslist .goodsitem .goodsinfo .goods_price {
  color: pink;
  font-size: 40rpx;
}

