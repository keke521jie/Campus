/* 水平间距 */
.goodsinfo {
  width: 100%;
}
.goodsinfo .img {
  width: 100%;
  height: 100%;
}
.goodsinfo .slide {
  width: 100%;
  height: 474rpx;
  margin-bottom: 20rpx;
}
.goodsinfo .slide image {
  width: 100%;
  height: 100%;
}
.goodsinfo .userinfo {
  padding: 0 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.goodsinfo .userinfo .user {
  display: flex;
  align-items: center;
}
.goodsinfo .userinfo .user image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.goodsinfo .userinfo .user .user_nickname {
  font-size: 40rpx;
  margin-right: 200rpx;
}
.goodsinfo .userinfo .date {
  font-size: 20rpx;
  color: #999;
}
.goodsinfo .goodsinfo {
  display: flex;
  flex-direction: column;
  padding: 0 20rpx;
}
.goodsinfo .goodsinfo .goodsname {
  display: flex;
  width: 100%;
  font-size: 50rpx;
  justify-content: space-between;
  padding: 30rpx;
}
.goodsinfo .goodsinfo .goodsname .name {
  font-weight: 700;
}
.goodsinfo .goodsinfo .goodsname .price {
  color: skyblue;
}
.goodsinfo .goodsinfo .describe {
  font-size: 30rpx;
  color: #999;
  padding: 20rpx;
}
.goodsinfo .handle {
  position: fixed;
  bottom: 0;
  width: 100%;
}

